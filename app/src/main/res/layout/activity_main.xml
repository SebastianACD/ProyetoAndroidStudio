<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/bt_servicios"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:adjustViewBounds="false"
        android:background="#ABA8AAAC"
        android:contentDescription="@string/Boton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bt_empresas"
        app:layout_constraintStart_toEndOf="@+id/bt_productos" />

    <ImageButton
        android:id="@+id/bt_productos"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:adjustViewBounds="false"
        android:background="#AB8D9099"
        android:contentDescription="@string/Boton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bt_servicios"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/bt_empresas"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:adjustViewBounds="false"
        android:background="#ABA8AAAC"
        android:contentDescription="@string/Boton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bt_login"
        app:layout_constraintStart_toEndOf="@+id/bt_servicios" />

    <ImageButton
        android:id="@+id/bt_login"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:adjustViewBounds="false"
        android:background="#ABA8AAAC"
        android:contentDescription="@string/Boton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_empresas" />

    <ListView
        android:id="@+id/lv_productos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bt_servicios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>